#!/bin/bash

printf '\033]2;Invader Framework\a'

#blue start 
	BS="-e \033[1;34m"
#color end
	CE="\033[0m"
#red start
	RS="-e \033[1;31m"
#green start
	GNS="-e \033[1;32m"
#white start
  WHS="\033[0;97m"

if [[ "$1" = "-u" || "$1" = "--update" ]]
then
sleep 1
echo ""$BS"[*] Installing update..."$CE""
{
cd
rm -r ~/invader
cd ~
git clone https://github.com/entynetproject/invader.git
cd invader
chmod +x invader
cd invader/setup
} &> /dev/null
sleep 1
echo ""$GNS"[*] Successfully updated..."$CE""
sleep 1
cd 
cd invader/setup
python ./setup_database.py
sleep 1
exit
fi

cd ~
if [[ -d ~/invader ]]
then
{
cd ~/invader
} &> /dev/null
chmod +x invader
./invader $1 $2 $3 $4 $5 $6 $7 $8 $9
else
{
ASESR="$( timeout -s SIGTERM 40 curl -s checkip.dyndns.org | sed -e 's/.*Current IP Address: //' -e 's/<.*$//' )"
} &> /dev/null
if [[ "$ASESR" != "" ]]
then 
cd ~
{
git clone https://github.com/entynetproject/invader.git
cd ~/invader
} &> /dev/null
chmod +x invader
./invader $1 $2 $3 $4 $5 $6 $7 $8 $9
else
cd ~
sleep 1
exit
fi
fi
